<div>
  <%- if User.current.allowed_to?(:add_issues, project) and
         project.product_backlog.open? -%>
    <%- Tracker.pbi_trackers(project).each do |tracker| -%>
      <%= link_to tracker.name, new_pbi_path(project.product_backlog, tracker, :top => top),
                  :remote => true, :method => "GET", :class => "icon icon-add" %>
    <%- end -%>
  <%- end -%>
  <%= link_to l(:label_check_dependencies), check_dependencies_project_product_backlog_index_path(project),
              :remote => true, :method => "GET", :class => "icon icon-help" %>
</div>
<br />